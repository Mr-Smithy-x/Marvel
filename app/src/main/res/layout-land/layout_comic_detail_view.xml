<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_avatar"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    app:layout_collapseMode="parallax">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:id="@+id/comic_card_image"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            tools:src="@mipmap/avengers" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/standard_margin">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/comic_card_title"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_standard_padding"
                android:textStyle="bold"

                android:textSize="22sp"
                tools:text="Title: Avengers" />


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/comic_card_isbn"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="ISBN: Lorem Ipsum" />


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/comic_card_price"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_standard_padding"
                android:textStyle="bold"
                tools:text="Price: $39.99" />


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="Description" />


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/comic_card_desc"
                android:layout_height="wrap_content"
                tools:text="Avengers" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
