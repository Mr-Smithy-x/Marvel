<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" />
            <stroke android:width="0.5dp" android:color="@color/colorPrimaryDark" />
            <padding android:bottom="@dimen/half_standard_padding" android:left="@dimen/half_standard_padding" android:right="@dimen/half_standard_padding" android:top="@dimen/half_standard_padding" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#eee" />
            <corners android:radius="8dp" />
            <stroke android:width="0.5dp" android:color="@color/colorPrimaryDark" />
            <padding android:bottom="@dimen/half_standard_padding" android:left="@dimen/half_standard_padding" android:right="@dimen/half_standard_padding" android:top="@dimen/half_standard_padding" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#eee" />
            <corners android:radius="8dp" />
            <stroke android:width="0.5dp" android:color="@color/colorPrimaryDark" />
            <padding android:bottom="@dimen/half_standard_padding" android:left="@dimen/half_standard_padding" android:right="@dimen/half_standard_padding" android:top="@dimen/half_standard_padding" />
        </shape>
    </item>
</selector>